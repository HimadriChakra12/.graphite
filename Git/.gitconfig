[user]
	name = HimadriChakra12
	email = himadrichakrabortydip@gmail.com
[core]
	compression = 9
	whitespace = error
	preloadindex = true

[init]
	defaultBranch = master

[status]
	branch = true
	showStash = true
	showUntrackedFiles = true

[diff]
	context = 3
	renames = copies
	interHunkContext = 10
    colorMoved = default

[push]
	autoSetupRemote = true
	default = current
	followTags = true

[pull]
	default = current
	rebase = true

[rebase]
	autoStash = true


[alias]
  st = status
  co = checkout
  ci = commit
  br = branch
  sw = switch
  cm = commit -m
  ca = commit --amend
  df = diff
  lg = log --oneline --graph --decorate --all
  lga = log --graph --abbrev-commit --decorate --all --date=relative --format=format:'%C(bold blue)%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold white)<%an>%Creset'

  # Add all changes and commit
  ac = "!git add -A && git commit"

  # Add, commit, and push in one line
  acp = "!git add -A && git commit -m \"$1\" && git push" 

  # Undo last commit (keep changes)
  uncommit = reset --soft HEAD~1

  # See current config
  cfg = config --list

  # Clean untracked files (be careful!)
  clean-all = "!git clean -fd && git reset --hard"


